
<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <%= render 'form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room do %>
          <div class="card mb-2">
            <div class="card-body">
              <%= room.name %>
              <div class="chat-box">
                <%= render "messages/form", message: Message.new, room: @room %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <p><%= @room.name %></p>
        <% @room.messages.each do |message| %>
          <p><%= message.content %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div >
