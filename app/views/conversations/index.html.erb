<h1>Conversations</h1>
<% @conversations.each do %>
    <% if conversation.sender_id == current_user_id || conversation.recipient_id == current_user_id %>
        <% if conversation.sender_id == current_user_id %>
            <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
            <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <% link_to recipient.email, conversation_messages_path(conversation) %>
    <% end %>
<% end %>